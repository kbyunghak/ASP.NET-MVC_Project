@model DiplomaDataModel.Models.Choice

@{
    ViewBag.Title = "Choose Option";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BCIT Computing Department Option Selection Form</h2>


@using (Html.BeginForm())
