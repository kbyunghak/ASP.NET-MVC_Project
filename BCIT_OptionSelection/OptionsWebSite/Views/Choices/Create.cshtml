                @Html.EditorFor(model => model.FourthChoiceOptionId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FourthChoiceOptionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary btn-large" />
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-primary btn-large" })
                }
            </div>
        </div>
    </div>
}




    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
